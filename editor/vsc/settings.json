// 将设置放入此文件中以覆盖默认设置
{
    "editor.fontFamily": "mononoki",
    "editor.fontWeight":"bold",
    "editor.fontSize": 16,
    "editor.rulers": [],
    "C_Cpp.clang_format_path": "/usr/local/bin/clang-format",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.clang_format_formatOnSave": true,
    "python.formatting.formatOnSave": true,
    "python.linting.maxNumberOfProblems": 512,
    "python.linting.autopep8Args": ["--ignore=E501,C0301,W0142,W0402,R0201,E1101,E1102,C0103,R0901,R0903,R0904,C1001,W0223,W0232,W0201,E1103,R0801,C0111","--max_line_length=512"],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "*.pyc": true,  
        "*.pyo" : true
    },
    "extensions.autoUpdate": true
}